{
    "name": "MadeInPlanApp",
    "description": "Made In Plan Desktop WebApplication",
    "version": "2.0.0",
    "author": "TheEcho <marvin.catois@live.fr>",
    "license": "MIT",
    "private": true,
    "scripts": {
        "watchify": "watchify -vd -p browserify-hmr -g browserify-css -e Sources/main.js -o Dist/bundle.js",
        "start": "node index.js",
        "dev": "npm-run-all --parallel watchify start",
        "build": "cross-env NODE_ENV=preprod browserify -g [ envify --NODE_ENV preprod ] -g browserify-css Sources/main.js | uglifyjs -b beautify=false,max-line-len=120000 -c warnings=false -m > Dist/bundle.js",
        "build-prod": "cross-env NODE_ENV=production browserify -g [ envify --NODE_ENV production ] -g browserify-css Sources/main.js | uglifyjs -b beautify=false,max-line-len=120000 -c warnings=false -m > Dist/bundle.js",
        "test": "jest",
        "check": "npm run test && npm run dev"
    },
    "dependencies": {
        "accent-folding": "^1.0.3",
        "async": "^2.6.0",
        "axios": "^0.18.0",
        "bcrypt-nodejs": "^0.0.3",
        "body-parser": "^1.18.2",
        "chart.js": "^2.7.2",
        "cookie-parser": "^1.4.3",
        "cookie-session": "^2.0.0-beta.3",
        "d3-shape": "^1.2.0",
        "element-ui": "^2.2.0",
        "express": "^4.16.2",
        "express-session": "^1.15.6",
        "html-pdf": "^2.2.0",
        "mobile-detect": "^1.4.2",
        "moment": "^2.22.2",
        "mongoose": "^5.0.6",
        "morgan": "^1.9.0",
        "multer": "^1.3.0",
        "nodemailer": "^4.4.2",
        "nodemailer-smtp-transport": "^2.7.4",
        "npm": "^5.8.0",
        "nvm": "^0.0.4",
        "passport": "0.3.2",
        "passport-facebook": "2.1.1",
        "passport-google-oauth": "1.0.0",
        "passport-local": "1.0.0",
        "sanitize-html": "^2.11.0",
        "socket.io": "^2.1.1",
        "stripe": "^6.1.0",
        "sweetalert2": "^7.22.0",
        "three": "^0.95.0",
        "three.meshline": "^1.1.0",
        "two.js": "^0.7.0-alpha.1",
        "v-tooltip": "^2.0.0-rc.33",
        "vue": "^2.5.11",
        "vue-carousel": "^0.7.3",
        "vue-chartjs": "^3.3.2",
        "vue-croppa": "^1.3.7",
        "vue-localstorage": "^0.6.1",
        "vue-masonry": "^0.11.1",
        "vue-meta": "^1.5.5",
        "vue-moment": "^4.0.0-0",
        "vue-numeric": "^2.3.0",
        "vue-picture-input": "^2.1.6",
        "vue-router": "^3.0.1",
        "vue-scroll": "^2.1.7",
        "vue-scrollto": "^2.11.0",
        "vue-slider-component": "^2.7.4",
        "vuedraggable": "^2.16.0",
        "vuex": "^3.0.1"
    },
    "devDependencies": {
        "@vue/server-test-utils": "^1.0.0-beta.20",
        "@vue/test-utils": "^1.0.0-beta.20",
        "babel-core": "^6.0.0",
        "babel-jest": "^23.2.0",
        "babel-plugin-transform-remove-strict-mode": "0.0.2",
        "babel-preset-es2015": "^6.0.0",
        "babelify": "^7.2.0",
        "browserify": "^13.0.1",
        "browserify-css": "^0.14.0",
        "browserify-hmr": "^0.3.1",
        "cross-env": "^1.0.6",
        "envify": "^3.4.1",
        "jest": "^23.2.0",
        "jest-vue-preprocessor": "^1.4.0",
        "npm-run-all": "^2.1.2",
        "uglify-js": "^2.5.0",
        "vue-masonry-css": "^1.0.2",
        "vue-template-compiler": "^2.7.16",
        "vue-test-utils": "^1.0.0-beta.11",
        "vueify": "^9.1.0",
        "watchify": "^3.4.0"
    },
    "browserify": {
        "transform": [
            "vueify",
            "babelify"
        ]
    },
    "browser": {
        "vue": "vue/dist/vue.common.js"
    },
    "jest": {
        "moduleNameMapper": {
            "^vue$": "vue/dist/vue.common.js"
        },
        "moduleFileExtensions": [
            "js",
            "vue"
        ],
        "transform": {
            "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
            ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue-preprocessor"
        }
    }
}
